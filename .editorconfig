# EditorConfig is awesome: http://EditorConfig.org

# NOT top-most EditorConfig file
root = false

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[{*.js,.jshintrc}]
indent_style = tab
indent_size = 4

[{*.json,*.lock}]
indent_style = space
indent_size = 4

[*.scss]
indent_style = tab
indent_size = 2

[*.css]
indent_style = tab
indent_size = 2

[*.php]
indent_style = tab
indent_size = 4

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2

# Matches the exact files package.json and .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

# Ignore paths
[vendor/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
